
<!--Content Area-->
<div class="container">
  <div class="row">
    <!--Select Date -->
    <div class="col-sm-6"> 
     <!--Date -->
     <form role="form" class="form-inline">
      <div class="form-group  form-group-lg">
       <label for="inputDate">Dat</label>
       <input type="date" class="form-control datepicker" id="inputDate" placeholder="at_beginning_of_day('%d-%m-%Y')" value= Time.now.strftime('%d-%m-%Y')>
     </div>
   </form>
 </div>
 <div class="col-sm-6 text-right">
   <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myCreate"> Punch In </button>
   <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myCreate"> Punch Out </button>
   <!-- Punch In Modal -->
   <div class="modal fade" id="myCreate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
       <h4 class="modal-title" id="myModalLabel">Punch In</h4>
     </div>
     <div class="modal-body"> 

       <!-- Model body -->
       <div class="row">
        <div class="col-sm-12">
         <form class="form-horizontal">
          <!--To Add Comments  -->
          <div class="form-group">
           <label for="inputComment" class="col-sm-3 control-label">Comments</label>
           <div class="col-sm-9">
            <textarea class="form-control" id="inputBody" rows="6"></textarea>
          </div>
        </div>
        <div class="modal-footer">
         <button type="button" class="btn btn-primary ok-btn-padding">OK</button>
         <button type="button" class="btn btn-default ok-btn-padding" data-dismiss="modal">Cancel</button>
       </div>
     </form>
   </div>
 </div>
 <!-- ./ Moodal body --> 
</div>
</div>
</div>
</div>
<!-- ./ Moodal --> 
</div>
<div class="col-sm-6"></div>
</div> 

<hr>

<!--Main Content-->
<div class="row">
  <!--List View column -->
  <div class="col-sm-9">
   <div class="panel panel-primary">
    <div class="panel-heading">Daily Schedule View</div>
    <div class="panel-body">
     <div class="pull-right"><%= link_to "Add New", new_timesheet_path, :class =>"btn btn-info btn-lg", :remote => true %>  </div>
     <div id="append_form"></div>
     <div id = "index_form"></div>

     <!--./row -->
   </div>    

   <div class="panel-footer text-center"> 
    <h3><small>Total Hours :</small> <span class="text-warning">08:00</span></h3>
  </div>
</div>
</div>

</div>

<!-- ./List view --> 


<!-- ./ Show view -->

</div>
</div>
<script>
  $(document).ready(function(){
    $("#show").click(function(){
      $("#time_sheet").show();
    });
    $("#inputDate").change(function(){
      var date = $("#inputDate").val();
      console.log(date);
      $.ajax({
       type: "POST",
       url: "/timesheets/search_record",
       data: { created_at: date },
       success: function(data) {
        $('#index_form').html(data);
      }
    });
    });
  });
</script>